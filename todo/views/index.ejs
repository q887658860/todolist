<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>
  <body>
    <h1><%= title %></h1>
   <form action="/create" method="post" accept-charset="utf-8">
   	<input type="text" name="content">
   </form>
   <form action="/displaySortByContent" method="get" accept-charset="utf-8">
     <p><button type="submit">Sort(content)</button></p>
   </form>

   <% todos.forEach(function(todo){ %>
   		<p>
   			<span><%= todo.content %></span> 
        <span><a href="/edit/<%= todo._id %>">Edit</a></span>
   			<span><a href="/delete/<%= todo._id %>">Delete</a></span>
   		</p>
   <% }); %>
   
  </body>
</html>
